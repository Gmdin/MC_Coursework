<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Computing"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghulam Mahial Din"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/Roll_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BSEF18A539"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="93dp" />

    <ImageView
        android:id="@+id/repoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="127dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository Link"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="347dp" />

    <Button
        android:id="@+id/btnApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makhārij al-ḥurūf App"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="279dp" />

</androidx.constraintlayout.widget.ConstraintLayout>